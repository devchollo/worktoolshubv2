{
  "version": 2,
  "rewrites": [
    { "source": "/js/:file", "destination": "/views/tools/js/:file" },
    { "source": "/tools/article.html", "destination": "/views/tools/article.html" },
    { "source": "/tools/:slug", "destination": "/views/tools/:slug.html" },
    { "source": "/tools/:slug/:rest*", "destination": "/views/tools/:slug/:rest*.html" },
    { "source": "/", "destination": "/views/index.html" },
    { "source": "/(.*)", "destination": "/views/$1" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "worktoolshub.info" }],
      "destination": "https://www.worktoolshub.info/:1",
      "permanent": true
    },
    {
      "source": "/sitemap.xml",
      "has": [{ "type": "host", "value": "www.worktoolshub.info" }],
      "destination": "https://worktoolshubv2.onrender.com/api/sitemap.xml",
      "permanent": false
    },
    {
      "source": "/robots.txt",
      "has": [{ "type": "host", "value": "www.worktoolshub.info" }],
      "destination": "https://worktoolshubv2.onrender.com/api/robots.txt",
      "permanent": false
    }
  ]
}
