{
  "version": 2,
  "rewrites": [
    { "source": "/tools/:slug", "destination": "/tools/:slug.html" },
    { "source": "/tools/:slug/:rest*", "destination": "/tools/:slug/:rest*.html" },
    { "source": "/", "destination": "/public/views/index.html" },
    { "source": "/(.*)", "destination": "/public/views/$1" }
  ]
}
